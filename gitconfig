[user]
name = <name>
email = <email>

[core]
excludesfile = ~/.gitignore_global
pager = less -RFX

[diff]
tool = vimdiff

[merge]
tool = vimdiff

[pager]
diff   = diffr | less -RFX
log    = diffr | less -RFX
reflog = diffr | less -RFX
show   = diffr | less -RFX

[delta]
navigate = true

[interactive]
diffFilter = delta --color-only

[push]
default = simple

[alias]
lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
unstage = reset HEAD --
staged  = diff --staged
changed = diff --name-only
co = checkout
br = branch
ci = commit
st = status

#[url "git@gitserver:"]
#insteadOf = "https://gitserver/"
