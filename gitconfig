[user]
name = <name>
email = <email>

[init]
defaultBranch = main

[core]
excludesfile = ~/.gitignore_global
pager = less -RFX

[diff]
tool = vim -d

[diff "sopsdiffer"]
textconv = sops -d

[merge]
tool = vim -d

[pager]
diff   = diffr | less -RFX
log    = diffr | less -RFX
reflog = diffr | less -RFX
show   = diffr | less -RFX

[delta]
navigate = true

[interactive]
diffFilter = diffr | less -RFX

[push]
default = simple

[pull]
rebase = true

[alias]
br = branch
ci = commit
co = checkout
st = status
sw = switch

changed = diff --name-only
staged  = diff --staged
unstage = reset HEAD --

lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit

#[url "git@gitserver:"]
#insteadOf = "https://gitserver/"
