[user]
name = <name>
email = <email>

[core]
excludesfile = ~/.gitignore_global

[diff]
tool = vimdiff

[merge]
tool = vimdiff

[pager]
diff = delta
log = delta
reflog = delta
show = delta

[delta]
navigate = true

[interactive]
diffFilter = delta --color-only

[push]
default = simple

[alias]
lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
unstage = reset HEAD --
stage   = diff --staged
co = checkout
br = branch
ci = commit
st = status

