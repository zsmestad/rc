[user]
  name = <name here>
  email = <email here>
[core]
  excludesfile = ~/.gitignore_global
[diff]
  tool = vimdiff
[merge]
  tool = vimdiff
[pager]
  log  = ~/.cargo/bin/diffr | less -R
  show = ~/.cargo/bin/diffr | less -R
  diff = ~/.cargo/bin/diffr | less -R
[push]
  default = simple
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
  unstage = reset HEAD --
  stage   = diff --staged
  co = checkout
  br = branch
  ci = commit
  st = status
