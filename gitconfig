[user]
name = <name>
email = <email>

[core]
excludesfile = ~/.gitignore_global
pager = less -RFX

[init]
defaultBranch = main

[diff]
tool = vimdiff

[merge]
tool = vimdiff

[pager]
diff   = diffr | less -RFX
log    = diffr | less -RFX
reflog = diffr | less -RFX
show   = diffr | less -RFX

[delta]
navigate = true

[interactive]
diffFilter = delta --color-only

[push]
default = simple

[pull]
rebase = true

[alias]
br = branch
ci = commit
co = checkout
st = status
sw = switch

staged  = diff --staged
unstage = reset HEAD --

lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset' --abbrev-commit
lng = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n'' %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

#[url "git@gitserver:"]
#insteadOf = "https://gitserver/"
