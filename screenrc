# Unicode
setenv LC_CTYPE en_US.UTF-8
defutf8 on

# No longer annoying
vbell off

# Clear buffer after running full screen commands
altscreen on

# No startup message
startup_message off

# Number of lines kept in scrollbuffer (default 100)
defscrollback 10000

# Nice status on the bottom (http://bc.tech.coop/blog/071001.html)
hardstatus alwayslastline "%{.bW}%-w%{.rW}%n %t%{-}%+w | %h"

# Good over SSH
autodetach on

# Default shell
shell zsh
